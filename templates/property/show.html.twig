{% extends 'base.html.twig'%}
{% block title %}
{{property.title}}
{% endblock %}
{% block body %}
<div class="container mt-4">
   <div class="row">
      <div class="col-md-8">

      </div>
      <div class="col-md-4">
         <h1>{{property.title}}</h1>
         <h2>{{property.rooms}} pieces - {{property.surface}}</h2>
         <div class="text-primary" style="font-size: 4rem; font-weight: bold;">{{property.price}}</div>
         <a href="" class="btn btn-primary">Contacter l'agence</a>
         <p>
            {{property.description | nl2br }}
         </p>
         <div class="row">
            <div class="col-md-8">
               <table class="table table-striped">
                  <tr>
                     <td>
                        Surface habitable
                     </td>
                     <td>
                        {{property.surface}} m
                     </td>
                  </tr>
                  <tr>
                     <td>
                        Pieces
                     </td>
                     <td>
                        {{property.rooms}}
                     </td>
                  </tr>

               </table>
            </div>
            <div class="col-md-4">

            </div>
         </div>

      </div>
   </div>

</div>
{% endblock %}

