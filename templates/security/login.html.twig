{% extends 'base.html.twig' %}
{% block title 'Se connecter' %}
{% block body %}
    <div class="container mt-4">
        {% if error %}
        <div class="alert alert-danger">
            {{ error.message }}
        </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">Nom d'untilisateur</label>
                <input type="text" id="username" name="_username" class="form_control" value="{{ lastUserName }}">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form_control">
            </div>
            <button type="submit" class="btn btn-primary"> Se connecter </button>
        </form>

    </div>
{% endblock %}